# Database Configuration
POSTGRES_DB=poliom
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_database_password_here

# Database URL (PostgreSQL with pgvector)
DATABASE_URL=postgresql://postgres:your_secure_database_password_here@postgres:5432/poliom

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz-EXAMPLE

# GigaChat Configuration
GIGACHAT_API_KEY=your_gigachat_api_key_base64_encoded_here
GIGACHAT_SCOPE=GIGACHAT_API_PERS

# Admin Panel Configuration
ADMIN_SECRET_KEY=your-super-secret-admin-key-change-in-production

# Optional: Override default settings
MAX_FILE_SIZE=52428800  # 50MB
LOG_LEVEL=INFO

# ===========================================
# НАСТРОЙКИ ПОИСКА RAG СИСТЕМЫ
# ===========================================

# Максимальное количество результатов поиска
SEARCH_LIMIT=15

# Основной порог схожести для поиска (0.0-1.0)
SIMILARITY_THRESHOLD=0.3

# Минимальный порог схожести для фильтрации (0.0-1.0)
MIN_SIMILARITY_THRESHOLD=0.25

# Количество похожих вопросов в FAQ
FAQ_SEARCH_LIMIT=3

# Время жизни кэша FAQ (секунды)
FAQ_CACHE_TTL=3600

# ===========================================
# НАСТРОЙКИ LLM (GIGACHAT)
# ===========================================

# Таймаут запросов к LLM (секунды)
LLM_TIMEOUT=30

# Максимальное количество токенов
LLM_MAX_TOKENS=2000

# ===========================================
# НАСТРОЙКИ БОТА
# ===========================================

# Таймаут бота (секунды)
BOT_TIMEOUT=30

# Максимальная длина сообщения
MAX_MESSAGE_LENGTH=4096

# Максимальное количество одновременных запросов
CONCURRENT_REQUESTS=10

# Таймаут запросов (секунды)
REQUEST_TIMEOUT=60

# Максимальное количество запросов в минуту на пользователя
RATE_LIMIT_PER_MINUTE=10

# Список администраторов (ID через запятую)
ADMIN_IDS=123456789,987654321

# ===========================================
# НАСТРОЙКИ WEBHOOK (ДЛЯ ПРОДАКШЕНА)
# ===========================================

# URL для webhook (опционально)
# WEBHOOK_URL=https://your-domain.com/webhook

# Порт для webhook
WEBHOOK_PORT=8443

# ===========================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ===========================================

# Настройки для разработки
ENVIRONMENT=development

# Версия API
API_VERSION=v1

# Основные настройки
REDIS_URL=redis://redis:6379/0

# JWT настройки
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Настройки логирования
LOG_LEVEL=INFO

# Настройки обработки документов
MAX_FILE_SIZE_MB=50
CHUNK_SIZE=1500
CHUNK_OVERLAP=200

# Настройки RAG
MAX_CHUNKS_PER_QUERY=5
MAX_TOKENS_PER_RESPONSE=1000 