# Database Configuration
POSTGRES_DB=poliom
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Database URL (PostgreSQL with pgvector)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/poliom

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# GigaChat Configuration
GIGACHAT_API_KEY=YOUR_GIGACHAT_API_KEY_HERE
GIGACHAT_SCOPE=GIGACHAT_API_PERS

# Admin Panel Configuration
ADMIN_SECRET_KEY=super-secret-admin-key-change-in-production

# Optional: Override default settings
MAX_FILE_SIZE=52428800  # 50MB
LOG_LEVEL=INFO

# ===========================================
# НАСТРОЙКИ ПОИСКА RAG СИСТЕМЫ
# ===========================================

# Максимальное количество результатов поиска
SEARCH_LIMIT=15

# Основной порог схожести для поиска (0.0-1.0)
SIMILARITY_THRESHOLD=0.3

# Минимальный порог схожести для фильтрации (0.0-1.0)
MIN_SIMILARITY_THRESHOLD=0.25

# Количество похожих вопросов в FAQ
FAQ_SEARCH_LIMIT=3

# Время жизни кэша FAQ (секунды)
FAQ_CACHE_TTL=3600

# ===========================================
# НАСТРОЙКИ LLM (GIGACHAT)
# ===========================================

# Таймаут запросов к LLM (секунды)
LLM_TIMEOUT=30

# Максимальное количество токенов
LLM_MAX_TOKENS=2000

# ===========================================
# НАСТРОЙКИ БОТА
# ===========================================

# Таймаут бота (секунды)
BOT_TIMEOUT=30

# Максимальная длина сообщения
MAX_MESSAGE_LENGTH=4096

# Максимальное количество одновременных запросов
CONCURRENT_REQUESTS=10

# Таймаут запросов (секунды)
REQUEST_TIMEOUT=60

# Максимальное количество запросов в минуту на пользователя
RATE_LIMIT_PER_MINUTE=10

# Список администраторов (ID через запятую)
ADMIN_IDS=

# ===========================================
# НАСТРОЙКИ WEBHOOK (ДЛЯ ПРОДАКШЕНА)
# ===========================================

# URL для webhook (опционально)
# WEBHOOK_URL=https://your-domain.com/webhook

# Порт для webhook
WEBHOOK_PORT=8443

# ===========================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ===========================================

# Настройки для разработки
ENVIRONMENT=development

# Версия API
API_VERSION=v1 